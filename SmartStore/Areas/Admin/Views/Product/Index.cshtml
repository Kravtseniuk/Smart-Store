@model IEnumerable<SmartStore_Models.Product>

<div class="add-heder-container">
    <h2>Список товарів</h2>
    <a asp-action="Create" class="success-button">
        <i class="fas fa-plus"></i> &nbsp; Додати товар
    </a>
</div>

<br />
<br />

@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th class="align-items-center">
                    Назва товару
                </th>
                <th class="text-center">
                    Ціна
                </th>
                <th class="text-center">
                    Дії
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="50%" style="display: table-cell; vertical-align: middle;">@obj.Name</td>
                    <td width="30%" class="text-center" style="display: table-cell; vertical-align: middle;">@obj.Price.ToString("N0") ₴</td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">

                            <a asp-route-Id="@obj.Id" asp-action="Edit" class="edit-button-icon">
                                <i class="fas fa-edit"></i>
                            </a>

                            <a asp-route-Id="@obj.Id" asp-action="Delete" class="delete-button-icon">
                                <i class="far fa-trash-alt"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Не знайдено жодного товару.</p>
}