@model SmartStore_Models.Category

<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden />
    <div class="border p-3 bg-white mt-4">

        <div class="form-group row text-start mb-4">
            <h2 class="offset-4 col-8" style="color:red">Видалити категорію</h2>
            <div class="line" style="height: 2px; background-color:red;"></div>
            <hr>
        </div>

        <div class="row">
            <div class="col-8">

                <div class="form-group row py-2">
                    <div class="offset-4 col-8">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" disabled class="form-control" />
                    </div>
                </div>

                <div class="form-group row py-2">
                    <div class="offset-4 col-8">
                        <label asp-for="DisplayOrder"></label>
                        <input asp-for="DisplayOrder" disabled class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-8 offset-4 row py-2">

                        <div class="col">
                            <a asp-action="Index" class="btn btn-primary w-100"><i class="fas fa-arrow-left"></i> Повернутись</a>
                        </div>

                        <div class="col">
                            <button type="submit" class="btn btn-danger w-100">
                                <i class="fas fa-trash-alt"></i> Видалити
                            </button>
                        </div>
                        
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>

</form>

@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }

}