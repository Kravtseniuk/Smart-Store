@model List<SmartStore_Models.Category>

@*<partial name="_Notification" />*@

<div class="container p-3 bg-white mt-4">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Список товарів</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp; Створити нову категорію
            </a>
        </div>
    </div>

    <br /><br />

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Назва категорії
                    </th>
                    <th>
                        Порядок відображення
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model.OrderBy(u => u.DisplayOrder))
                {
                    <tr>
                        <td>@obj.Name</td>
                        <td>
                            @obj.DisplayOrder
                        </td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i> Редагувати
                                </a>
                                <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash3"></i> Видалити
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>