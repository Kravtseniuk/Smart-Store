@model SmartStore_Models.ViewModels.ProductUserVM

<form method="post" id="payment-form">
        
        <br />
        <div class="container">
            <div class="card">
                
                <div class="cart-title-container">
                    <div class="cart-title">
                        <i class="fas fa-check-square"></i> &nbsp; Оформлення замовлення
                    </div>
                </div>
                <hr />

                <div class="card-body">
                    <div class="container rounded p-2">
                        <div class="row">
                            <div class="col-12 col-lg-7 pb-4 mb-4">
                                <div class="row">
                                    <h4 class="d-flex justify-content-between align-items-center mb-3">
                                        <span class="text-info">Ваші контактні дані:</span>
                                    </h4>
                                </div>
                                @*<div class="row my-1">
                                    <div class="col-3">
                                        <label>Name</label>
                                    </div>
                                    <div class="col-9">
                                        <input asp-for="ApplicationUser.FullName" type="text" class="form-control" />
                                    </div>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">
                                        <label>Phone</label>
                                    </div>
                                    <div class="col-9">
                                        <input asp-for="ApplicationUser.PhoneNumber" required type="text" class="form-control" />
                                    </div>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">
                                        <label>Email</label>
                                    </div>
                                    <div class="col-9">
                                        <input asp-for="ApplicationUser.Email" required type="text" class="form-control" />
                                    </div>
                                </div>*@

                            <div class="row my-1" style="margin-top: 20px;">
                                <div class="col-3">
                                    <label>Ім'я та прізвище</label>
                                </div>
                                <div class="col-9">
                                    <input asp-for="ApplicationUser.FullName" type="text" class="form-control" />
                                </div>
                            </div>
                            <div class="row my-1" style="margin-top: 20px;">
                                <div class="col-3">
                                    <label>Мобільний телефон</label>
                                </div>
                                <div class="col-9">
                                    <input asp-for="ApplicationUser.PhoneNumber" required type="text" class="form-control" />
                                </div>
                            </div>
                            <div class="row my-1" style="margin-top: 20px;">
                                <div class="col-3">
                                    <label>Email</label>
                                </div>
                                <div class="col-9">
                                    <input asp-for="ApplicationUser.Email" required type="text" class="form-control" />
                                </div>
                            </div>


                                @if (User.IsInRole(SmartStore_Utility.WC.AdminRole))
                                {

                                    <div class="row my-1" style="margin-top: 20px;">
                                        <div class="col-3">
                                            <label>Адреса</label>
                                        </div>
                                        <div class="col-9">
                                            <input asp-for="ApplicationUser.StreetAddress" type="text" class="form-control" />
                                        </div>
                                    </div>

                                    <div class="row my-1" style="margin-top: 20px;">
                                        <div class="col-3">
                                            <label>Місто</label>
                                        </div>
                                        <div class="col-9">
                                            <input asp-for="ApplicationUser.City" type="text" class="form-control" />
                                        </div>
                                    </div>

                                    <div class="row my-1" style="margin-top: 20px;">
                                        <div class="col-3">
                                            <label>Область</label>
                                        </div>
                                        <div class="col-9">
                                            <input asp-for="ApplicationUser.State" type="text" class="form-control" />
                                        </div>
                                    </div>

                                    <div class="row my-1" style="margin-top: 20px;">
                                        <div class="col-3">
                                            <label>Поштовий індекс</label>
                                        </div>
                                        <div class="col-9">
                                            <input asp-for="ApplicationUser.PostalCode" type="text" class="form-control" />
                                        </div>
                                    </div>
                                }
                            </div>
                            <div class="col-12 col-lg-5 pb-4 mt-4">
                                <div class="col-12">
                                    <h4 class="d-flex justify-content-between align-items-center mb-3">
                                        <span class="text-info">Товари:</span>
                                    </h4>
                                    <ul class="list-group mb-3">
                                        @{ var orderTotal = 0.0;}

                                        @for (int i = 0; i < Model.ProductList.Count(); i++)
                                        {
                                            <input type="hidden" asp-for="@Model.ProductList[i].Id" />
                                            <input type="hidden" asp-for="@Model.ProductList[i].Name" />
                                            <input type="hidden" asp-for="@Model.ProductList[i].Price" />
                                            <input type="hidden" asp-for="@Model.ProductList[i].TempQuantity" />
                                            <li class="list-group-item d-flex justify-content-between">
                                                <div>
                                                    <h5 class="my-0">@Model.ProductList[i].Name</h5>
                                                    @if (User.IsInRole(SmartStore_Utility.WC.AdminRole))
                                                    {
                                                        <span class="text-muted">Кількість: @Model.ProductList[i].TempQuantity</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">Ціна: @Model.ProductList[i].Price.ToString("N0") ₴</span>
                                                    }
                                                </div>
                                                @if (User.IsInRole(SmartStore_Utility.WC.AdminRole))
                                                {
                                                    <span class="text-muted">@(Model.ProductList[i].Price * Model.ProductList[i].TempQuantity)</span>
                                                }
                                            </li>
                                            orderTotal += Model.ProductList[i].Price * Model.ProductList[i].TempQuantity;
                                        }

                                        <li class="list-group-item d-flex justify-content-between bg-light">
                                            <h3 class="text-info text-center"> До сплати &nbsp; @string.Format("{0:c}", orderTotal)</h3>
                                        </li>
                                    </ul>
                                </div>
                                @if (User.IsInRole(SmartStore_Utility.WC.AdminRole))
                                {
                                    <div>
                                        <div id="dropin-container"></div>
                                        <input id="nonce" name="payment_method_nonce" type="hidden" />
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                <div class="summary-footer">
                    <div class="continue-shopping">
                        <a class="btn btn-outline-info btn-sm" asp-action="Index">Повернутись до кошика</a>
                    </div>
                    
                    
                    @if (User.IsInRole(SmartStore_Utility.WC.AdminRole))
                    {
                        <button class="submit-inquiry-button" onclick="return validateInput()" id="submit-button">Підтвердити замовлення</button>
                    }
                    else
                    {
                        <button type="submit" onclick="return validateInput()" class="submit-inquiry-button">Замовлення підтверджую</button>
                    }
                </div>
            </div>
        </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    @if (User.IsInRole(SmartStore_Utility.WC.AdminRole))
    {
        <script src="https://js.braintreegateway.com/web/dropin/1.22.1/js/dropin.min.js"></script>
        <script>
            var client_token = "@ViewBag.ClientToken";
            var form = document.querySelector('#payment-form');

            braintree.dropin.create({
                authorization: client_token,
                container: '#dropin-container'
            }, function (createErr, instance) {
                form.addEventListener('submit', function () {
                    event.preventDefault();

                    //Add the nonce to the form and submit
                    instance.requestPaymentMethod(function (err, payload) {
                        // Submit payload.nonce to your server
                        document.querySelector('#nonce').value = payload.nonce;
                        form.submit();
                    });
                });
            });
        </script>
    }
    <script>
        function validateInput() {
            var app_name = document.getElementById("ApplicationUser_FullName").value;
            var app_phone = document.getElementById("ApplicationUser_PhoneNumber").value;
            var app_email = document.getElementById("ApplicationUser_Email").value;

            if (app_name.toString() == '') {
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: 'Please enter Full Name!'
                })
                return false;
            }
            if (app_phone.toString() == '') {
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: 'Please enter Phone Number!'
                })
                return false;
            }
            if (app_email.toString() == '') {
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: 'Please enter Email!'
                })
                return false;
            }

            return true;
        }
    </script>
}


